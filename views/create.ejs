<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.js"></script>
    


</head>
<body>

    <% include ./partials/menu %>


    <div class="container">
        <div class="panel panel-danger">
            <div class="panel panel-heading text-center">
                <h1>It's Add A New Hero Time.</h1>
            </div>
            <div class="panel-body" id="all">
          
                <form method="POST" action="">

                    <div class="form-group col-xs-12 col-sm-6 col-sm-offset-3">
                        <label for="exampleInputName">Hero Name</label>
                        <input type="text" class="form-control" id="exampleInputName" aria-describedby="heroName" placeholder="Enter Hero Name" name="name">
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-sm-offset-3">
                        <label for="exampleInputURL">Image URL</label>
                        <input type="text" class="form-control" id="exampleInputURL" placeholder="Link to hero image" name="image_url">
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-sm-offset-3">
                        <label for="exampleInputDescription">Description</label>
                        <input type="text" class="form-control" id="summernote" placeholder="Link to description" name="description">
                        <!-- <div id="summernote" name="description"></div> -->
                    </div>
                    
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <button type="submit" class="btn btn-success btn-block">Add Hero</button>
                    </div>

                </form>

            </div>
            
            <div class="panel-footer text-center">

                <p>All rights reserved 2018 | Nate.</p>

            </div>

        </div>
        
    </div>
    
</body>

<script>

    $('#summernote').summernote({
        placeholder: 'Hello bootstrap 4',
        tabsize: 2,
        height: 100
    });
        
</script>

